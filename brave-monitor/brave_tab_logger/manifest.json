{
  "manifest_version": 2,
  "name": "Brave Tab URL Logger",
  "version": "1.0",
  "description": "Logs all open tab URLs in Brave.",
  "permissions": [
    "tabs",
    "nativeMessaging"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}

